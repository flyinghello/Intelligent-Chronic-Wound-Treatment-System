
/* 图表的父容器样式 */
.my-chart{
    width: 750rpx;
    height: 500rpx;

}

/* 将图表设置为父容器my-chart宽高的百分百 */
ec-canvas{
    width: 100%;
    height: 100%;
}

/* 按钮的父容器样式 */
.wrap{
    display: flex;
    justify-content: space-evenly;
    padding: 30rpx;
}

/* 按钮的样式 */
.btn{
    font-size: 20px;
}

/* 被点击到的样式 */
.on{
