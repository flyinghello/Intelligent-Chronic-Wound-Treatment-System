/* bluetooth-comp/index.wxss */
.devices_summary {
  /* margin-top: 30px; */
  padding: 10px;
  font-size: 16px;
}

.device_item {
  border-bottom: 1px solid #eee;
  padding: 10px;
  color: #666;
}

.device_item_hover {
  background-color: rgba(0, 0, 0, 0.1);
}


.weui-progress {
  margin-bottom: 24px;
}

.rich-text-container {
  text-align: center;
  /* 居中对齐 */
  border: 1px dashed #ccc;
  /* 虚线边框 */
  padding: 10px;
  margin: 5px;
  /* 增加外边距 */
  margin-top: 40px;
  border-radius: 10px;
  /* 圆角边框 */
  background-color: #f9f9f9;
  /* 背景色 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  /* 添加阴影效果 */
}

.rich-text-container .big-text {
  font-size: 20px;
  /* 大字 */
  font-weight: bolder;
  /* 更粗的字体 */
  color: #1d4e2e;
  /* 暗一点的颜色 */
  margin-bottom: 5px;
  /* 增加下边距 */
}

.details {
  padding: 10px;
  background-color: #f5f5f5;
}

.param-name {
  font-weight: bold;
  color: #625e5e;
}

.param-value {
  color: hsl(158, 93%, 32%);
}

/* 上传区域整体样式 */
.upload-container {
  padding: 15px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* 上传标题栏 */
.cu-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  font-size: 16px;
  font-weight: bold;
  color: #333;
  border-bottom: 1px solid #eee;
}

/* 图片网格布局 */
.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  /* 4列布局 */
  gap: 10px;
  padding: 10px;
}

/* 单个图片容器 */
.bg-img {
  position: relative;
  width: 100%;
  height: 80px;
  border-radius: 8px;
  overflow: hidden;
  background-color: #f8f8f8;
}

/* 图片样式 */
.bg-img image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8px;
}

/* 删除按钮（右上角的 X） */
.cu-tag {
  position: absolute;
  top: 5px;
  right: 5px;
  width: 20px;
  height: 20px;
  background-color: rgba(255, 0, 0, 0.7);
  color: white;
  font-size: 14px;
  text-align: center;
  line-height: 20px;
  border-radius: 50%;
  cursor: pointer;
}

/* 添加图片按钮 */
.solids {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80px;
  border-radius: 8px;
  border: 2px dashed #ccc;
  color: #aaa;
  font-size: 24px;
  transition: all 0.3s ease-in-out;
}

.solids:hover {
  background-color: rgba(0, 0, 0, 0.05);
  border-color: #888;
  color: #555;
}

/* 提交按钮 */
.submit {
  width: 100%;
  padding: 12px;
  margin-top: 10px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  transition: background-color 0.3s ease-in-out;
}

.submit:active {
  background-color: #005ecb;
}